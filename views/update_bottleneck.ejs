<!-- include header-->
<%- include('include/_header')%>
<!-- /include header-->

    <!--Main site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> Todos los reportes</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2>Actualizar Cuello de Botella</h2>
                <span>Formulario para actualizar reporte</span>
            </div>
            
            <!--Form handling-->
            <form method="POST" id="update_bottleneck">
                <div class="new_reportecb">
                    <div class="form-group">
                        <label for="code" class="text-ligth">Código</label>
                        <input type="number" name="code" value="<%=bottleneck.code%>">
                    </div>
                    <div class="form-group">
                        <label for="date" class="text-ligth">Fecha</label>
                        <input type="date" name="date" value="<%=bottleneck.date%>">
                    </div>
                    <div class="form-group">
                        <label for="dniManager" class="text-ligth">Cédula Encargado</label>
                        <input type="text" name="dniManager" placeholder="05-0361-0263" value="<%=bottleneck.dniManager%>">
                    </div>
                    <div class="form-group">
                        <label for="reason" class="text-ligth">Motivo</label>
                        <input type="text" name="reason" placeholder="Motivo del cuello de botella" value="<%=bottleneck.reason%>">
                    </div>
                    <div class="form-group">
                        <label for="lot" class="text-ligth">Lote</label>
                        <input type="number" name="lot" placeholder="3003" value="<%=bottleneck.lot%>">
                    </div>
                    <div class="form-group">
                        <label for="section" class="text-ligth">Sección</label>
                        <input type="number" name="section" placeholder="23" value="<%=bottleneck.section%>">
                    </div>
                    <div class="form-group">
                        <label for="hourBegin" class="text-ligth">Hora Inicial</label>
                        <input type="time" name="hourBegin" placeholder="06:00:00 AM" value="<%=bottleneck.hourBegin%>">
                    </div>
                    <div class="form-group">
                        <label for="hourFinal" class="text-ligth">Horal Final</label>
                        <input type="time" name="hourFinal" placeholder="02:00:00 PM" value="<%=bottleneck.hourFinal%>">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Guardar</button>
                    </div>
                </div>
            </form>
            <!--/Form handling-->

        </div>
    </main>
    <!--/Main site-->

<!-- include footer-->
<%- include('include/_footer')%>
<!-- /include footer-->