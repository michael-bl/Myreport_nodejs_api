<!-- include header-->
<%- include('include/_header')%>
<!-- /include header-->

    <!--Main site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> Todos los reportes</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2>Actualizar Cuello de Botella</h2>
                <span>Formulario para actualizar reporte</span>
            </div>
            
            <!--Form handling-->
            <form method="POST" id="update_cuellobotella">
                <div class="new_reportecb">
                    <div class="form-group">
                        <label for="fecha" class="text-ligth">Fecha</label>
                        <input type="date" name="fecha" value="">
                    </div>
                    <div class="form-group">
                        <label for="dni_encargado" class="text-ligth">Cédula Encargado</label>
                        <input type="hidden" name="id" value="">
                        <input type="text" name="dni_encargado" placeholder="05-0361-0263">
                    </div>
                    <div class="form-group">
                        <label for="motivo" class="text-ligth">Motivo</label>
                        <input type="hidden" name="id" value="">
                        <input type="text" name="motivo" placeholder="Motivo del cuello de botella">
                    </div>
                    <div class="form-group">
                        <label for="lote" class="text-ligth">Lote</label>
                        <input type="hidden" name="id" value="">
                        <input type="number" name="lote" placeholder="3003">
                    </div>
                    <div class="form-group">
                        <label for="seccion" class="text-ligth">Sección</label>
                        <input type="hidden" name="id" value="">
                        <input type="number" name="seccion" placeholder="23">
                    </div>
                    <div class="form-group">
                        <label for="hora_inicio" class="text-ligth">Hora Inicial</label>
                        <input type="hidden" name="id" value="">
                        <input type="time" name="hora_inicio" placeholder="06:00:00 AM">
                    </div>
                    <div class="form-group">
                        <label for="hora_final" class="text-ligth">Horal Final</label>
                        <input type="hidden" name="id" value="">
                        <input type="time" name="hora_final" placeholder="02:00:00 PM">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Guardar</button>
                    </div>
                </div>
            </form>
            <!--/Form handling-->

        </div>
    </main>
    <!--/Main site-->

<!-- include footer-->
<%- include('include/_footer')%>
<!-- /include footer-->